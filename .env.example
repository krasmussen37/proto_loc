# proto_loc Analytics Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# AI/LLM API KEYS
# ================================
# OpenAI API Key (for PandasAI and other AI features)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=your-anthropic-key-here

# Groq API Key (for fast inference)
GROQ_API_KEY=your-groq-key-here

# Google Gemini API Key
GEMINI_API_KEY=your-gemini-key-here

# xAI Grok API Key
XAI_GROK_API_KEY=your-xai-key-here

# ================================
# SERVICE CONFIGURATION
# ================================
# Superset Admin Credentials (optional - defaults shown)
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=admin
SUPERSET_ADMIN_EMAIL=admin@example.com

# Superset Secret Key (change in production)
SUPERSET_SECRET_KEY=your-secret-key-here-change-me-in-production

# ================================
# DATABASE PATHS (optional - defaults shown)
# ================================
DUCKDB_RAW_PATH=/app/02_duck_db/01_raw/raw.duckdb
DUCKDB_DEV_PATH=/app/02_duck_db/02_dev/dev.duckdb
DUCKDB_PROD_PATH=/app/02_duck_db/03_prod/prod.duckdb

# ================================
# SERVICE PORTS (optional - defaults shown)
# ================================
DAGSTER_PORT=3000
SUPERSET_PORT=8088
JUPYTER_PORT=8888
CUBE_PORT=4000

# ================================
# POSTGRESQL CONFIGURATION (for Superset metadata)
# ================================
SUPERSET_POSTGRES_HOST=postgres
SUPERSET_POSTGRES_PORT=5432
SUPERSET_POSTGRES_DB=superset
SUPERSET_POSTGRES_USER=superset
SUPERSET_POSTGRES_PASSWORD=superset
